<script>
    $(document).ready(function () {
        $("body").on("click", "#md_mxw_check_bt_save", function (e) {

            var disI = $('.mdadw-l-check').eq($('#md_mxw_check_list_chk').text() - 1).closest('.mdadw-div-container').find('.i-operate');

             $.ajax({
                type: 'POST',
                dataType: 'json',
                  url: '@Url.Action("WeightCheckCheck", "Default")',
                 data: '{"jobSysid":' + $('#md_mxw_check_div_job_sysid').text() + ',"step":' + $('#md_mxw_check_div_step').text() + ',"runNo":' + $('#md_mxw_check_div_no').text() + ',"listNo":' + $('#md_mxw_check_list_chk').text() + ',"password":"' + $('#md_mxw_check_check_i_password').val() + '"}',
                contentType: "application/json; charset=utf-8",
                 success: function (data) {
                     if (data[0].status == 1) {
                        $('.mdadw-l-check').eq($('#md_mxw_check_list_chk').text()-1).parent().html('@HttpContext.Current.Session["USERNAME"].ToString()');
                         $('#modalTMainWeighCheckCheck').modal('toggle');
                         $('.md-mx-weight-check-dt').eq($('#md_mxw_check_list_chk').text() - 1).text(data[0].dt);
                         disI.attr('disabled', 'disabled');
                    }
                    else {
                        alert('Password ผิด');
                    }
             },
             error: function (xhr, ajaxOptions, thrownError) {
                 console.log(thrownError);
                 }
            });
        });
    });
</script>
<div class="modal fade" id="modalTMainWeighCheckCheck">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Check By</h4>
                <button type="button" id="mdachk_bt_close" class="mdadt-bt-close close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">

                <!--Parameter-->

                <div id="md_mxw_check_div_job_sysid" style="display:none" class="mdadt-div-job-sysid input-md"></div>
                <div id="md_mxw_check_div_step" style="display:none" class="md-mxw-chk-div-step input-md"></div>
                <div id="md_mxw_check_list_chk" style="display:none" class="md-mxw-operate-list-chk input-md"></div>
                <div id="md_mxw_check_div_no" style="display:none" class="mdadt-div-no input-md"></div>
                <!--Parameter-->

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12"><input type="password" id="md_mxw_check_check_i_password" class="input-md form-control form-control-sm" placeholder="Password" /></div>
                    </div>
                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <span class="error" style="color:red;display:none">Error</span>
                <button type="button" id="md_mxw_check_bt_save" class="mdadt-bt-close btn btn-success">Check</button>
                <button type="button" id="mdachk_bt_close" class="mdadt-bt-close btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
