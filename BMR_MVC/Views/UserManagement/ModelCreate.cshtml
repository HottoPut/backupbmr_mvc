<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<link href="~/Scripts/bootstrap-datetimepicker.min.css" rel="stylesheet">

<!-- Add Modal HTML -->
<div id="addEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Add User</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>User Login</label>
                        <input type="text" class="form-control" id="et_add_user_login" required>
                    </div>
                    <div class="form-group">
                        <label>User Name</label>
                        <input type="text" class="form-control" id="et_add_user_name" required>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" id="et_add_password" required>
                    </div>
                    <div class="form-group">
                        <label>User pre</label>
                        <input type="text" class="form-control" id="et_add_user_pre" required>
                    </div>
                    <div class="form-group">
                        <label>Group</label>

                        <div class="input-group">
                            <select class="custom-select" id="select_add_group">
                                <option selected>Choose...</option>
                                <option value="1">1</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <label>Start Date</label>
                            <input type="text" class="form-control mdedt-i-dateMNT" id="et_add_start_dt" required>
                        </div>
                        <div class="form-group">
                            <label>End Date</label>
                            <input type="text" class="form-control mdedt-i-dateMNT" id="et_add_end_dt" required>
                        </div>

                        <div class="modal-footer">
                            <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                            <input type="submit" class="btn btn-success" value="Add" id="bt_add_save">
                        </div>

                    </div>

            </form>
        </div>
    </div>
</div>
